<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Socket.IO chat</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        form {
            padding: 0% 20% 1% 20%;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        form input {
            border: 1px solid black;
            border-radius: 4px;
            padding: 1.5% 2%;
            width: 90%;
            margin-right: 1%;
        }

        form button {
            background: rgb(15, 66, 235);
            border: none;
            border-radius: 4px;
            padding: 1.5% 2%;
            color: white;
        }

        #messages {
            list-style-type: none;
            margin: 0;
            padding: 0 20%;
        }

        #messages li {
            padding: 5px 10px;
        }

        .box {
            display: flex;
            justify-content: flex-end;
            flex-direction: column;
        }

        .mebubble {
            min-width: 60px;
            max-width: 700px;
            padding: 14px 18px;
            margin: 6px 8px;
            background-color: #5b5377;
            border-radius: 16px 16px 0 16px;
            border: 1px solid #443f56;
        }

        .otherbubble {
            min-width: 60px;
            max-width: 700px;
            padding: 14px 18px;
            margin: 6px 8px;
            background-color: #6C8EA4;
            border-radius: 16px 16px 16px 0;
            border: 1px solid #54788e;
        }

        .me {
            display: inline-flex;
            align-self: flex-end;
            flex-direction: row-reverse;
        }

        .other {
            display: inline-flex;
        }
    </style>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
        $(function () {
            var socket = io();
            $('form').submit(function (e) {
                e.preventDefault(); // prevents page reloading
                socket.emit('chat message', $('#m').val());
                let box = document.createElement('div');
                let inline = document.createElement('div');
                let bubble = document.createElement('div');
                let li = document.createElement('li');
                box.setAttribute('class', 'box');
                inline.setAttribute('class', 'me');
                bubble.setAttribute('class', 'mebubble');
                li.innerHTML = $('#m').val();
                $("#messages").append(box);
                box.appendChild(inline);
                inline.appendChild(bubble);
                bubble.appendChild(li);
                $('#m').val('');
                return false;
            });
            socket.on('chat message', function (msg) {
                let box = document.createElement('div');
                let inline = document.createElement('div');
                let bubble = document.createElement('div');
                let li = document.createElement('li');
                box.setAttribute('class', 'box');
                inline.setAttribute('class', 'other');
                bubble.setAttribute('class', 'otherbubble');
                li.innerHTML = msg;
                $("#messages").append(box);
                box.appendChild(inline);
                inline.appendChild(bubble);
                bubble.appendChild(li);
            });
        });
    </script>
</head>

<body>
    <ul id="messages"></ul>
    <form action="">
        <input id="m" autocomplete="off" required /><button>send</button>
    </form>
</body>

</html>